    "express": "^4.21.2",
    "express-rate-limit": "^7.5.0",
    "helmet": "^8.0.0",
    "jsonwebtoken": "^8.5.1",
    "mailersend": "^2.3.0",
    "mongoose": "^8.12.1",
    "nodemailer": "^6.10.0",
    "uuid": "^11.1.0",
    "validator": "^13.12.0",
    "zod": "^3.24.2"
